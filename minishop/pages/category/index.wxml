<!--pages/category/index.wxml-->

<view class="cascades">
  <SearchInput></SearchInput>
  <view class="cascades_container">
    <scroll-view class="left_menu" scroll-y>
      <view 
      class="menu_item {{index===currentIndex?'active':''}}" 
      wx:for="{{leftMenuList}}"
      wx:key="*this"
      >
      {{item}}
      </view>
    </scroll-view>
    <scroll-view class="right_content" scroll-y>
      <view 
      class="goods_group"
      wx:for="{{rightShopList}}"
      wx:for-index="index1"
      wx:for-item="item1"
      >
        <view class="goods_title">
          <text class="delimiter">
            /
          </text>
          <text class="title">
            {{item1.cat_name}}
          </text>
          <text class="delimiter">
            /
          </text>
            
        </view>
        <view class="goods_list">
        <navigator
         open-type="navigate"
         wx:for="{{item1.children}}"
         wx:for-index="index2"
         wx:for-item="item2"
         wx:key="cat_id"
         >
        <image class="" src="{{item2.cat_icon}}" mode="widthFix"/>
        <view class="goods_name">
        {{item2.cat_name}}
        </view>
        </navigator>
          
        </view>
      </view>
    </scroll-view>
  </view>
</view>
